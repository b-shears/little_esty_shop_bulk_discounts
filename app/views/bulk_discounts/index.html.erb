<h1> <%= @merchant.name %> Bulk Discounts Index</h1>
<br>
<%= link_to 'Create New Discount', new_merchant_bulk_discount_path(@merchant) %>
<br>
<% @discounts.each do |discount| %>
  <div id="discount-<%= discount.id %>">
    <li> Percentage Discount: <%= discount.percentage_discount %>
        Quantity Threshold: <%= discount.quantity %>
        <%= link_to "Discount Details", merchant_bulk_discounts_path(@merchant, discount)  %>
        <%= link_to "Delete Discount", "/merchant/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :delete %>
    </li>
  </div>
<% end %>


<h2>Upcoming Holidays</h2>
<% @holidays.each do |holiday| %>
  <h5><%= holiday.name %> - <%= holiday.date %></h5>
<% end %>
